{{> createplayer }}

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Age</th>
    <th>Height</th>
    <th>Weight</th>
    <th>College</th>
  </tr>
  <tr>
    <td>{{playerbio.name}}</td>
    <td>{{playerbio.position}}</td>
    <td>{{playerbio.age}}</td>
    <td>{{playerbio.height}}</td>
    <td>{{playerbio.weight}}</td>
    <td>{{playerbio.college}}</td>
  </tr>
</table>

<div>
  {{#each allGamePlayers as |playerstats|}}
  <table>
    <tr>
      <th>Points</th>
      <th>Rebounds</th>
      <th>Assists</th>
      <th>Steals</th>
      <th>Turnovers</th>
      <th>Blocks</th>
      <th>Personal Fouls</th>
    </tr>
    <tr>
      <td>{{playerstats.points}}</td>
      <td>{{playerstats.rebounds}}</td>
      <td>{{playerstats.assists}}</td>
      <td>{{playerstats.steals}}</td>
      <td>{{playerstats.turnovers}}</td>
      <td>{{playerstats.blocks}}</td>
      <td>{{playerstats.personalFouls}}</td>
    </tr>
  </table>
  {{/each}}
</div>